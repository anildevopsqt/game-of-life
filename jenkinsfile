pipeline  {
      agent {label 'MAVEN_JDK'}
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/anildevopsqt/game-of-life.git'
                    branch: 'declarative'
        }
    }
    stage('package') {
        steps {
            sh 'mvn package'
        }
    }
    stage('post build') {
        steps {
            archiveArtifacts artifacts: '**/target/gameoflife.war',
                             onlysuccessful: true
            junit testResult: '**/surefire-report/TEST-*.xml'
        }
    }        
}
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            ' 
        }
    }    
        
    
        

        
        
    

